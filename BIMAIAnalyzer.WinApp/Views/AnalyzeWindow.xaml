<UserControl x:Class="BIMAIAnalyzer.WinApp.Views.AnalyzeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIMAIAnalyzer.WinApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <Label Content="User Input" 
          HorizontalAlignment="Left"
          Margin="0 5"
          FontSize="16"/>
        <TextBox Text="{Binding Input}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            AcceptsReturn="True"
            FontSize="16"/>

        <Button Content="Send" 
           Margin="0 5"
           FontSize="16"
           Command="{Binding ProcessInputCommand}"/>

        <Label Content="AI Output"
          HorizontalAlignment="Left"
          Margin="0 5"
          FontSize="16"/>
        <TextBox Text="{Binding Output}" 
            IsReadOnly="True"
            TextWrapping="Wrap"
            Height="300"
            VerticalScrollBarVisibility="Auto"
            FontSize="16"/>
    </StackPanel>
</UserControl>
